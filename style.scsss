body {
	background: #e4e2f2;
  user-select: none;
	overflow-y: hidden;
}

@function makelongshadow($color, $len) {
  $val: 0px 0px $color;
  @for $i from 1 through $len {
    // $color2: lighten($color, $i*0.8);
    $val: #{$val}, -#{$i}px -#{$i}px #{$color};
  }
  @return $val;
}

@mixin longshadow($color, $len) {
  text-shadow: makelongshadow($color, $len);
}

a {
	text-decoration: none;
}


.letter {
  display: block;
	// width: fit-content;
	letter-spacing: 24px;
	font-style: italic;
	transition: .5s all;
  height: 220px;
  text-align: center;
  border-radius: 10px;
	transform: rotate3d(1, 0, 1, 350deg);
  margin: -35px 0;
	@include longshadow(black, 40);
	color:white;
	-webkit-text-stroke-width: 1px;
	-webkit-text-stroke-color: black;
}

.letter:hover {
  // text-transform: uppercase;
	transform: rotate3d(1, 0, 1, 355deg);
	@include longshadow(#0768D7, 50);
}

.lol {
	font-size: 20px;
	text-decoration: underline;
	position: absolute;
	right: 20px;
	bottom: 20px;
	color: purple;
}

.container {
  font-family: 'Roboto', serif;
  margin: 0 auto;
  width: 100%;
	height: 100%;
  padding-top: 80px;
  font-size: 200px;
  text-align: center;
}

#rahul {
	margin-top: 100px;
	color: #357edd;
	transform: rotate3d(1, 0, 1, 365deg);
	@include longshadow(black, 28);
}

#rahul:hover {
	@include longshadow(black, 50);
	transform: rotate3d(1, 0, 1, 355deg);
}


@media screen and (max-width: 1200px) {
  .h1 {
    font-size: unset !important
  }
}
